<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <!-- SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

</head>
<body>

{% include 'navbar.html.twig' %}

{% block body %}

    <div class="container mt-5">
        <h2>Formulario de Factura</h2>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_row(form.id) }}
        </div>

        <h5>Valores de Potencia</h5>

        <div class="mb-3">
            {{ form_row(form.startDate) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.endDate) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.username) }}
        </div>

        <h5>Valores Consumo kwh P1, P2, P3</h5>
        <div class="mb-3">
            {{ form_row(form.consumption.p1) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.consumption.p2) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.consumption.p3) }}
        </div>

        <h5>Valores Potencia kw P1, P2, P3</h5>
        <div class="mb-3">
            {{ form_row(form.contractedpower.p1) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.contractedpower.p2) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.contractedpower.p3) }}
        </div>

        <style>
            .space-bottom {
                margin-bottom: 20px;
            }
        </style>

        <div class="mb-3 space-bottom">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>

        <div class="mb-3" style="margin-bottom: 20px;" hidden>
            <button>hola</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<!-- SweetAlert JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
<script>
    window.onload = function() {
        let fields = [
            document.getElementById('power_prices_power_p1'),
            document.getElementById('power_prices_power_p2'),
            document.getElementById('power_prices_power_p3')
        ];

        fields.forEach(field => {
            field.addEventListener('input', function() {

                let regex = /^\d+(\.\d{0,2})?$/;

                if (!regex.test(field.value)) {

                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'Solo se permiten hasta dos decimales.'
                    });

                    field.value = '';
                }
            });
        });
    }
</script>



</body>
</html>
